{
	"manifest_version" : 2,
	"name" : "地址搜索插建",
	"description" : "",
	"version" : "2.0",
    "browser_action": {
        "default_title": "",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }, 	
	"content_scripts" : [
		{
			"matches" : ["*://*/*"],
			"js" : ["jquery-3.1.1.min.js","Chart.bundle.min.js","app.js"],
			"css" : ["animate.css","app.css"]
		}
	],
    "background" : {
        "scripts" : ["event.js"],
        "persistent" : true
    },
	"permissions" : ["tabs","contextMenus"]
}